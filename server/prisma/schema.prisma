// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  name      String
  email     String   @unique
  password  String
  userType  UserType @default(USER)
  career    Career[]
  event     Event[]
}

model Career {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime @default(now())
  companyName      String
  companyImageLink String
  companyWebsite   String
  companyVision    String
  role             String
  roleDescription  String
  skills           String[]
  jobType          String
  jobLocation      String
  userId           String   @db.ObjectId
  user             User?    @relation(fields: [userId], references: [id])
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  name        String
  description String
  location    String
  online      Boolean
  attendees   Int?
  dateStart   DateTime
  dateEnd     DateTime
  content     String
  eventType   String
  eventFor    String
  active      Boolean
  discordLink String
  userId      String   @db.ObjectId
  user        User?    @relation(fields: [userId], references: [id])
}

model Mentor {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime @default(now())
  mentorId   String   @db.ObjectId
  linkedIn   String
  github     String
  education  String
  experience String
  work       String
  fees       Int
  mentees    Int
}

model OTP {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  otp     String
  email   String
  expired DateTime
}

enum UserType {
  USER
  ADMIN
  MENTOR
}
